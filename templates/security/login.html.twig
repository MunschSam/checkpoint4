{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="uk-text-center">Please sign in</h1>
    <div class="uk-child-width-1-3@m" uk-grid>
    <div></div>
    <div class="uk-card uk-card-default uk-card-body uk-margin-left uk-margin-bottom uk-border-rounded uk-align-center">
    <div class="uk-margin-bottom">
    <label class="uk-form-label uk-label uk-border-rounded" for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    </div>
    <br>
    <label class="uk-form-label uk-label uk-border-rounded" for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
<br>
<br>
    <button class="uk-button uk-button-default uk-box-shadow-large uk-border-pill uk-margin-bottom uk-margin-top" type="submit">
        Sign in
    </button>
</form>
<div></div>
</div>
{% endblock %}

