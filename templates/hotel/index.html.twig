{% extends 'base.html.twig' %}

{% block title %}Hotel index{% endblock %}

{% block body %}
    <div class="uk-text-center">
    <h1>Hotel</h1>
    </div>
    {% if is_granted("ROLE_ADMIN") %}
<a class="uk-button uk-button-default uk-margin-medium-bottom uk-margin-medium-left uk-margin-top uk-box-shadow-large uk-border-pill" uk-icon="icon: plus" href="{{ path('hotel_new') }}"></a>
{% endif  %}
     <div class="uk-child-width-1-3@m" uk-grid>

        {% for hotel in hotels %}

            <section>
                <div class ="uk-margin-medium-top uk-margin-medium-left uk-margin-medium-right uk-margin-bottom uk-card uk-card-default uk-card-body uk-border-rounded">
                <div>
                    <h2>{{ hotel.name|raw }}</h2>
                </div>
                <div class="uk-flex uk-flex-center uk-margin-top">
                    <img class="uk-border-rounded" src="{{ vich_uploader_asset(hotel, "pictureFile") }}">
                </div>

                <div class="uk-margin-bottom uk-margin-top uk-card-medium uk-card-default uk-card-body uk-border-rounded uk-text-small uk-text-truncate">
                    {{ hotel.shortDescription|raw }}
                </div>

                <a class="uk-button uk-button-default uk-box-shadow-large uk-border-pill" uk-icon="icon: arrow-right" href="{{ path('hotel_show', {slug: hotel.slug}) }}"></a>
                </div>
            </section>

        {% endfor %}
        </div>
        <div class="uk-margin-xlarge-left uk-margin-bottom">
{{ knp_pagination_render(hotels) }}
</div>
{% endblock %}
