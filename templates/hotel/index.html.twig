{% extends 'base.html.twig' %}

{% block title %}Hotel index{% endblock %}

{% block body %}
    <h1>Hotel index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Picture</th>
                <th>ShortDescription</th>
                <th>Contenu</th>
                <th>Date</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for hotel in hotels %}
            <tr>
                <td>{{ hotel.id }}</td>
                <td>{{ hotel.picture }}</td>
                <td>{{ hotel.shortDescription }}</td>
                <td>{{ hotel.contenu }}</td>
                <td>{{ hotel.date ? hotel.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ hotel.updatedAt ? hotel.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('hotel_show', {'slug': hotel.slug}) }}">show</a>
                    <a href="{{ path('hotel_edit', {'slug': hotel.slug}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('hotel_new') }}">Create new</a>
{% endblock %}
