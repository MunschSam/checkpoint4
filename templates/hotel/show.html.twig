{% extends 'base.html.twig' %}

{% block title %}Hotel{% endblock %}

{% block body %}
    <h1>Hotel</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ hotel.id }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ hotel.picture }}</td>
            </tr>
            <tr>
                <th>ShortDescription</th>
                <td>{{ hotel.shortDescription }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ hotel.contenu }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ hotel.date ? hotel.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ hotel.updatedAt ? hotel.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('hotel_index') }}">back to list</a>

    <a href="{{ path('hotel_edit', {'id': hotel.id}) }}">edit</a>

    {{ include('hotel/_delete_form.html.twig') }}
{% endblock %}
