    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Comment</th>
                <th>CommentDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comment_restaurant in comment_restaurants %}
            <tr>
                <td>{{ comment_restaurant.id }}</td>
