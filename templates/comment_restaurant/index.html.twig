                <td>{{ comment_restaurant.commentDate ? comment_restaurant.commentDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('comment_restaurant_show', {'id': comment_restaurant.id}) }}">show</a>
